

<%= form_for(@user) do |f| %>
  <%= f.text_field :name, placeholder: 'name', :class => 'input-field' %>


  <%= f.number_field :linkedin_connections, placeholder: 'linkedin_connections', :class => 'input-field' %>

  <%= f.number_field :facebook_friends, placeholder: 'facebook_friends', :class => 'input-field' %>

  <%= f.number_field :twitter_followers, placeholder: 'twitter_followers', :class => 'input-field' %>


  <%= f.submit "Update", :class => 'form-submit-button' %>
<% end %>